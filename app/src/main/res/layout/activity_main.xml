<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#43403f"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rensw.demo.stepview.MainActivity">

    <com.rensw.stepview.HorizontalStepsViewIndicator
        android:id="@+id/stepView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_below="@+id/stepView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_bg"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onSign"
        android:text="签到"
        android:textColor="#ffffff" />
</RelativeLayout>
